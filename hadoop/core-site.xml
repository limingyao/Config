<!-- Put site-specific property overrides in this file. -->

<configuration>
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/home/limingyao/hdfs/tmp</value>
        <description>配置Hadoop的临时目录，默认在/tmp目录下，但是/tmp上面可能会被系统自动清理掉</description>
    </property>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://ubuntu-1:8000/</value>
        <description>用于设置Hadoop的文件系统，由URI指定</description>
    </property>
    <!-- limingyao proxy user setting -->
    <property>
        <name>hadoop.proxyuser.limingyao.hosts</name>
        <value>*</value>
    </property>
    <property>
        <name>hadoop.proxyuser.limingyao.groups</name>
        <value>*</value>
    </property>
</configuration>
